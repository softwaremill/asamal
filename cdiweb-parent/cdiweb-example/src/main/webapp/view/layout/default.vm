<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>$pageTitle</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    <link href="$tag.cssLink("bootstrap.css")" rel="stylesheet">
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="$tag.cssLink("bootstrap-responsive.css")" rel="stylesheet">

    $tag.cdiWebLinks()
</head>

<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">CDIWeb Example App</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li #if($controller.name == 'home' && $view == 'index')class="active"#end>
                        <a href="$tag.link('home', 'index')">Home</a></li>
                    <li #if($controller.name == 'home' && $view == 'register')class="active"#end>
                        <a href="$tag.link('home', 'register')">Register</a></li>
                    <li #if($controller.name == 'home' && $view == 'rerender')class="active"#end>
                        <a href="$tag.link('home', 'rerender')">ReRender</a></li>
                    <li #if($controller.name == 'school' && $view == 'index')class="active"#end>
                        <a href="$tag.link('school', 'index')">School</a></li>
                    <li><a href="$tag.jsonLink('home', 'showJSON')">JSON</a></li>
                </ul>

                <p class="navbar-text pull-right">
                    #if($login.loggedIn)
                        Logged in as $login.user.username
                        <a href="$tag.link('home', 'logout')">Logout</a></p>
                    #else
                        <a href="$tag.link('home', 'login')">Log in</a>
                    #end
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container">

    <div id="messages">
        #if($success)
            <div class="alert alert-success">
                <ul>
                    #foreach($m in $success)
                        <li>$m</li>
                    #end
                </ul>
            </div>
        #end
        #if($warn)
            <div class="alert alert-block">
                <ul>
                    #foreach($m in $warn)
                        <li>$m</li>
                    #end
                </ul>
            </div>
        #end
        #if($err)
            <div class="alert alert-error">
                <ul>
                    #foreach($m in $err)
                        <li>$m</li>
                    #end
                </ul>
            </div>
        #end
        #if($info)
            <div class="alert alert-info">
                <ul>
                    #foreach($m in $info)
                        <li>$m</li>
                    #end
                </ul>
            </div>
        #end
    </div>

    #includeRegion('content')

    <footer>
        #includeRegion('footer')
    </footer>

</div>
<!-- /container -->

<!-- Le javascript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="$tag.jsLink("jquery-min-1.7.1.js")"></script>
<script src="$tag.jsLink("bootstrap.min.js")"></script>

</body>
</html>